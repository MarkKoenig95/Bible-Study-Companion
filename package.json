{
  "name": "bible-study-companion",
  "version": "1.3.0",
  "license": "MIT",
  "private": true,
  "scripts": {
    "android": "react-native run-android",
    "android-release": "react-native run-android --variant=release",
    "android-fetch": "adb -s emulator-5554 shell cmd jobscheduler run -f com.biblestudycompanion 999",
    "build-ios": "react-native bundle --entry-file index.js --platform ios --dev false --bundle-output ios/main.jsbundle --assets-dest ios",
    "build-android": "cd android && ./gradlew bundleRelease",
    "clean": "react-native clean-project-auto && rm -rf ios/Podfile.lock && rm -rf ios/Build && rm -rf yarn.lock && yarn install && yarn pod-install",
    "clean-android": "cd android && ./gradlew clean",
    "ios": "react-native run-ios",
    "pod-install": "cd ios && pod install",
    "pod-install-update": "cd ios && pod install --repo-update",
    "start": "react-native start",
    "test": "jest",
    "e2e-ios": "echo \"\n\n\n Because of stupid things set your system time to March 31st, 2021 before running these tests\n\n\n\" && detox build -c ios.sim.release && detox test -c ios.sim.release -l warn",
    "e2e-android": "echo \"\n\n\n Because of stupid things set your system time to March 31st, 2021 before running these tests\n\n\n\" && detox build -c android.emu.release && detox test -c android.emu.release -l warn",
    "lint": "eslint .",
    "update-version": "react-native-version --never-amend"
  },
  "dependencies": {
    "@react-native-community/datetimepicker": "^3.0.1",
    "@react-native-community/masked-view": "^0.1.7",
    "@react-native-community/picker": "^1.6.6",
    "@react-native-community/push-notification-ios": "^1.4.1",
    "@react-native-community/toolbar-android": "^0.1.0-rc.2",
    "@react-navigation/bottom-tabs": "^5.5.2",
    "@react-navigation/native": "^5.0.9",
    "@react-navigation/stack": "^5.1.1",
    "i18n-js": "^3.7.0",
    "lodash.memoize": "^4.1.2",
    "moment": "^2.29.2",
    "react": "17.0.1",
    "react-native": "0.64.1",
    "react-native-background-fetch": "^3.1.0",
    "react-native-fs": "^2.16.6",
    "react-native-gesture-handler": "^1.6.0",
    "react-native-localize": "^1.4.0",
    "react-native-push-notification": "^7.3.1",
    "react-native-reanimated": "^1.7.0",
    "react-native-safe-area-context": "^0.7.3",
    "react-native-screens": "^2.2.0",
    "react-native-searchable-dropdown": "^1.1.3",
    "react-native-sqlite-storage": "^4.1.0",
    "react-native-vector-icons": "^6.6.0"
  },
  "devDependencies": {
    "@babel/core": "^7.12.9",
    "@babel/runtime": "^7.12.5",
    "@react-native-community/eslint-config": "^2.0.0",
    "@testing-library/react-native": "^7.2.0",
    "@types/jest": "^26.0.22",
    "@types/react": "^17.0.3",
    "@types/react-native": "^0.64.4",
    "@types/react-native-sqlite-storage": "^5.0.0",
    "@types/react-native-vector-icons": "^6.4.6",
    "@types/react-test-renderer": "^17.0.1",
    "babel-jest": "^26.6.3",
    "detox": "^18.3.1",
    "detox-getprops": "^0.1.2",
    "eslint": "^7.24.0",
    "eslint-config-prettier": "^6.10.1",
    "eslint-plugin-detox": "^1.0.0",
    "jest": "^26.6.3",
    "jest-circus": "^26.6.3",
    "metro-react-native-babel-preset": "^0.64.0",
    "react-native-clean-project": "^3.6.3",
    "react-native-version": "^4.0.0",
    "react-test-renderer": "17.0.1",
    "sqlite3": "^5.0.2",
    "typescript": "^4.2.4"
  },
  "jest": {
    "preset": "react-native",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx",
      "json",
      "node"
    ],
    "setupFiles": [
      "<rootDir>/jest/setup.js"
    ],
    "moduleNameMapper": {
      "\\.(css|less)$": "<rootDir>/__mocks__/styleMock.js",
      "\\.(jpg|jpeg|png|gif|eot|otf|webp|svg|ttf|woff|woff2|mp4|webm|wav|mp3|m4a|aac|oga)$": "<rootDir>/__mocks__/fileMock.js",
      "^config$": "<rootDir>/configs/app-config.js"
    },
    "transform": {
      "\\.js$": "babel-jest",
      "\\.(jpg|jpeg|png|gif|eot|otf|webp|svg|ttf|woff|woff2|mp4|webm|wav|mp3|m4a|aac|oga)$": "<rootDir>/fileTransformer.js"
    },
    "transformIgnorePatterns": [
      "node_modules/(?!((jest-)?react-native(-.*)?|@react-native(-community)?)/)"
    ]
  }
}
